generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Villa {
  id                 String   @id @default(cuid())
  name               String
  location           String
  price              String
  roi                String
  beds               Int
  baths              Int
  sqm                Int
  land               Int?
  address            String?  @db.Text
  latitude           Float?
  longitude          Float?
  description        String?  @db.Text
  mainVideoId        String?
  imageUrl           String?  // รูปหลักสำหรับการ์ด/hero (ถ้าไม่มีใช้ YouTube thumb)
  status             String?  @default("sale") // sale, rent
  rentPeriod         String?  // monthly, yearly (ใช้เมื่อ status=rent)
  propertyType       String?  @default("pool-villa") // pool-villa, townhouse, residential, land
  tag                String?
  sortOrder          Int      @default(0)
  isPublished        Boolean  @default(true)
  areaVideos         Json?    // [{ label, youtubeId }]
  gallery            Json?    // [{ label, area, imageUrl? }]
  rentalHistory      Json?    // [{ period, occupancy, avgRate, note? }]
  businessHistory    String?
  salePlan           String?
  investmentMonthly  Json?    // { revenue, expenses, profit }
  accountingSummary  Json?    // [{ period, revenue, profit }]
  amenities          Json?    // { pool, kidsPool, karaoke, pingpong, snooker, kitchen, wifi, parking, parkingSlots }
  ownerInfo          Json?    // ข้อมูลเจ้าของบ้าน (admin only, ไม่เผยแพร่)
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
}

model ProjectPromo {
  id          String   @id @default(cuid())
  name        String
  tagline     String?
  location    String?
  badge       String?
  targetUrl   String?
  imageUrl    String?
  description String?  @db.Text
  videoId     String?
  gallery     Json?    // [{ label, imageUrl }]
  highlights  Json?    // [{ label, value }] เช่น จำนวนหลัง, ขนาดที่ดิน, ราคาเริ่มต้น
  sortOrder   Int      @default(0)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model ContactSettings {
  id                  String   @id @default(cuid())
  logoUrl             String?  // โลโก้เว็บไซต์ (แสดงใน Header/Footer)
  faviconUrl          String?  // ไอคอนแท็บเบราว์เซอร์
  companyName         String?  // ชื่อบริษัท (ไทย)
  companyNameEn       String?  // ชื่อบริษัท (อังกฤษ)
  registrationNumber  String?  // เลขทะเบียนนิติบุคคล
  phone               String?
  email               String?
  lineUrl             String?
  address             String?
  mapUrl              String?
  facebookUrl         String?
  updatedAt           DateTime @updatedAt
}

model ContactInquiry {
  id        String   @id @default(cuid())
  name      String
  phone     String
  email     String?
  interest  String
  message   String?  @db.Text
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
}

model Article {
  id              String    @id @default(cuid())
  title           String
  slug            String    @unique
  excerpt         String?
  body            String    @db.Text
  coverImageUrl   String?
  seoKeywords     String?   @db.Text
  metaDescription String?   @db.Text
  isPublished     Boolean   @default(false)
  publishedAt     DateTime?
  sortOrder       Int       @default(0)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}
